#!/bin/bash

# Define colors for text
WHITE="\033[1;37m"
RESET="\033[0m"
GREEN="\033[1;32m"
CYAN="\033[1;36m"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
RED="\033[1;31m"
MAGENTA="\033[1;35m"

# Logo
logo() {
    echo -e "  ##  ###  #######  ######   #######  #######  #######  ######   #######  ##  ##   #######  ###### "
    echo -e "  ### ###  ##   ##  ##  ##   ##       ##         ###    ##  ##     ###    ##  ##   ##       ##  ## "
    echo -e "  #######  ##   ##  ##  ##   ##       #######    ###    ##  ##     ###    ## ##    ##       ##  ## "
    echo -e "  ## ####  ##  ###  ### ###  #######       ##    ###    #######    ###    #######  #######  ####### "
    echo -e "  ##  ###  ##  ###  ### ###  ###      ###  ##    ###    ### ###    ###    ##  ###  ###      ### ### "
    echo -e "  ##  ###  ##  ###  ### ###  # #      ###  ##    ###    ### ###    ###    ##  ###  # #      ### ### "
    echo -e "  ##  ###  #######  #######  #######  #######    ###    ### ###  #######  ##  ###  #######  ### ### ${RESET}"
}

# Function to install node
install_node() {
    echo -e "${CYAN}Starting node installation... ğŸŒ±${RESET}"

    # Update system and install required packages
    sudo apt update && sudo apt install -y curl git make jq build-essential gcc unzip wget lz4 aria2 tmux

    # Install Dria Launcher (check if it exists)
    if [ ! -f "/usr/local/bin/dria-launcher" ]; then
        echo -e "${YELLOW}Downloading and installing Dria Launcher... ğŸš€${RESET}"
        curl -fsSL https://dria.co/launcher | bash
    else
        echo -e "${GREEN}Dria Launcher is already installed. âœ…${RESET}"
    fi

    # Install Ollama (check if it exists)
    if [ ! -f "/usr/local/bin/ollama" ]; then
        echo -e "${YELLOW}Downloading and installing Ollama... ğŸ’»${RESET}"
        curl -fsSL https://ollama.com/install.sh | sh
    else
        echo -e "${GREEN}Ollama is already installed. âœ…${RESET}"
    fi

    # Start tmux with the command to launch the node
    echo -e "${CYAN}Launching tmux session to start the node... ğŸ–¥ï¸${RESET}"

    # Check if tmux session named 'dria_node' exists
    tmux has-session -t dria_node 2>/dev/null

    if [ $? != 0 ]; then
        # If session doesn't exist, create a new one
        tmux new-session -d -s dria_node
        # Send the command to start the node
        tmux send-keys -t dria_node 'dkn-compute-launcher start' C-m
        echo -e "${GREEN}Node successfully started in a new tmux session. ğŸ‰${RESET}"
    else
        # If the session exists, send the command to it
        tmux send-keys -t dria_node 'dkn-compute-launcher start' C-m
        echo -e "${CYAN}Tmux session named 'dria_node' already exists. Command sent. ğŸ”„${RESET}"
    fi

    # Attach to the tmux session
    tmux attach -t dria_node

    read -p "Press Enter to return to the menu..." dummy
    show_menu
}

# Function to check $DRIA Points
check_points() {
    echo -e "${CYAN}Checking $DRIA Points... ğŸ’°${RESET}"
    dkn-compute-launcher points
    read -p "Press Enter to return to the menu..." dummy
    show_menu
}

# Function for manual update
update_manually() {
    echo -e "${YELLOW}Starting manual update... ğŸ”„${RESET}"
    dkn-compute-launcher update
    read -p "Press Enter to return to the menu..." dummy
    show_menu
}

# Function to uninstall node
uninstall_node() {
    echo -e "${RED}Are you sure you want to uninstall the node? This action cannot be undone! ğŸ—‘ï¸${RESET}"
    read -p "Type 'yes' to confirm: " confirm
    if [ "$confirm" != "yes" ]; then
        echo -e "${YELLOW}Uninstallation aborted. ğŸš«${RESET}"
        return
    fi

    # Check if the node is running and stop it
    tmux has-session -t dria_node 2>/dev/null
    if [ $? == 0 ]; then
        echo -e "${CYAN}Stopping the node before uninstallation... â¹ï¸${RESET}"
        tmux send-keys -t dria_node 'exit' C-m
        tmux kill-session -t dria_node
        echo -e "${GREEN}Node stopped successfully. ğŸ›‘${RESET}"
    else
        echo -e "${YELLOW}No active session found for the node. Proceeding with uninstallation. âš¡${RESET}"
    fi

    # Uninstall the node
    echo -e "${RED}Uninstalling node... ğŸ—‘ï¸${RESET}"
    dkn-compute-launcher uninstall

    # Clean up any residual files or dependencies (if any)
    echo -e "${CYAN}Cleaning up residual files... ğŸ§¹${RESET}"
    sudo rm -rf /usr/local/bin/dria-launcher
    sudo rm -rf /usr/local/bin/ollama
    sudo rm -rf .dria  # Removing the .dria directory

    echo -e "${GREEN}Node successfully uninstalled and cleaned up. ğŸ‰${RESET}"
    read -p "Press Enter to return to the menu..." dummy
    show_menu
}

# Function to view logs
view_logs() {
    echo -e "${BLUE}Attaching to tmux session to view logs... ğŸ“œ${RESET}"
    tmux attach -t dria_node
    read -p "Press Enter to return to the menu..." dummy
    show_menu
}

# Function to display the menu
show_menu() {
    clear
    logo  # Display logo

    # Menu text window
    echo -e "\n${WHITE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
    echo -e "${WHITE}â•‘        MANAGEMENT MENU        â•‘${RESET}"
    echo -e "${WHITE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}\n"

    echo -e "${MAGENTA}=====================================${RESET}"
    echo "Choose an action:"
    echo -e "${YELLOW}1. Install node ğŸŒ±${RESET}"
    echo -e "${GREEN}2. Check $DRIA Points ğŸ’°${RESET}"
    echo -e "${CYAN}3. Update manually ğŸ”„${RESET}"
    echo -e "${RED}4. Uninstall node ğŸ—‘ï¸${RESET}"
    echo -e "${BLUE}5. View logs ğŸ“œ${RESET}"
    echo -e "${MAGENTA}6. Exit ğŸšª${RESET}"
    echo -e "${MAGENTA}=====================================${RESET}"
    read -p "Select an option [1-6]: " choice
    case $choice in
        1) install_node ;;
        2) check_points ;;
        3) update_manually ;;
        4) uninstall_node ;;
        5) view_logs ;;
        6) exit 0 ;;
        *) echo -e "${RED}Invalid option, please try again. âŒ${RESET}"; sleep 2; show_menu ;;
    esac
}

# Start by showing the menu instead of tmux session
show_menu
